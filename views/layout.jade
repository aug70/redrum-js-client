doctype html
html(data-ng-app="redrumApp")

	include ./includes/header.jade

	body.skin-blue(data-ng-controller="MenuController as menuctrl")

		// header logo: style can be found in header.less
		header.header
			a.logo(href='/', target="_self")
				// Add the class icon to your logo image or logo icon to add the margining
				| Redrum
			include ./includes/header_navbar

		.wrapper.row-offcanvas.row-offcanvas-left
			include ./includes/left_navbar

			// Right side column. Contains the bread-crumb menu and content of the page
			aside.right-side
				block content
			// /.right-side

		// ./wrapper

		block message-modal
		// jQuery 2.0.2
		script(src='//code.jquery.com/jquery-2.1.4.min.js', type='text/javascript')
		// jQuery UI 1.10.3
		script(src='//code.jquery.com/ui/1.11.3/jquery-ui.min.js', type='text/javascript')
		// Bootstrap
		script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js', type='text/javascript')
		// AdminLTE App
		script(src='/js/AdminLTE/app.js', type='text/javascript')
