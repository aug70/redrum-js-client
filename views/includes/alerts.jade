.row(ng-controller="AlertController", ng-init="getAlerts()")
.col-md-6
  .box.box-danger
    .box-header
      i.fa.fa-warning
      h3.box-title Alerts {{alerts}}
    // /.box-header
    .box-body
      .alert.alert-danger.alert-dismissable(ng-repeat="alert in alerts")
        i.fa.fa-ban
        button.close(type='button', data-dismiss='alert', aria-hidden='true') &times;
        b Alert!
        | {{alert.message}}
