.box
	.box-header
		h3.box-title Recommended for you

	// /.box-header	
	.box-body.table-responsive.table-striped(data-ng-show="(user.missingProducts | filter:productId).length")
		table.table-hover(data-ng-table="tableParams", show-filter="true", class="table")
			tr(data-ng-repeat="missingProduct in user.missingProducts")
				td 
					| {{$index+1}}
				td(data-title="'Name'", sortable="'name'", filter="{'name':'text'}")
					| {{missingProduct.name}} <span ng-show="missingProduct.onSale" class="label label-warning">On Sale</span>
				td(data-title="'Description'", sortable="'description'", filter="{'description':'text'}")
					| {{missingProduct.description}}
				td(data-title="'Price'", sortable="price", filter="{'price':'text'}")
					| <span data-ng-show="missingProduct.onSale"><strike>{{missingProduct.price}}</strike> {{missingProduct.discountedPrice}}</span>
					| <span data-ng-show="!missingProduct.onSale">{{missingProduct.price}}</span>
				td(data-title="'Action'")
					div(data-ng-repeat="link in missingProduct.links | filter: {rel: 'addToCart'}")
						a.btn.btn-primary.btn-xs(href="" data-ng-click="processCart(link.href, link.method)") {{link.label}}
	// /.box-body
// /.box
