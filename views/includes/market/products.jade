.box
	.box-header
		h3.box-title Products

	// /.box-header	
	.box-body.table-responsive.table-striped
		table.table-hover(data-ng-table="tableParams", show-filter="true", class="table")
			tr(data-ng-repeat="product in $data")
				td 
					| {{$index+1}}
				td(data-title="'Name'", sortable="'name'", filter="{'name':'text'}")
					| {{product.name}} <span data-ng-show="product.onSale" class="label label-warning">On Sale</span>
				td(data-title="'Description'", sortable="'description'", filter="{'description':'text'}")
					| {{product.description}}
				td(data-title="'Price'", sortable="price", filter="{'price':'text'}")
					| <span data-ng-show="product.onSale"><strike>{{product.price}}</strike> {{product.discountedPrice}}</span>
					| <span data-ng-show="!product.onSale">{{product.price}}</span>
				td(data-title="'Action'")
					div(data-ng-repeat="link in product.links | filter: {rel: 'addToCart'}")
						a.btn.btn-primary.btn-xs(href="" data-ng-click="processCart(link)") {{link.label}}
	// /.box-body
// /.box
