.box
	.box-header
		h3.box-title Your inventory
	// /.box-header
	.box-body
		// Table row
		.row
			.col-xs-12.table-responsive
				table.table.table-striped
					thead
						tr
							th Product
							th Validity
					tbody
						tr(ng-repeat="inventoryItem in inventory.inventoryItems")
							td {{inventoryItem.name}}
							td
								p.text-light-blue {{inventoryItem.validity}}
								p.text-aqua {{inventoryItem.validity}}
								p.text-red {{inventoryItem.validity}}
								p.text-yellow {{inventoryItem.validity}}
								p.text-green {{inventoryItem.validity}}
			// /.col
		// /.row
	// /.box-body
// /.box