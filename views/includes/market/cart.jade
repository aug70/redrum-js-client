.box
	.box-header
		h3.box-title Your shopping cart
	// /.box-header
	.box-body
		// Table row
		.row
			.col-xs-12.table-responsive
				table.table.table-striped(ng-show="cart.cartItems.length===0")
					thead
						tr
							th Your cart is empty!

				table.table.table-striped(ng-show="cart.cartItems.length")
					thead
						tr
							th Product
							th Qty
							th Cost
							th Action
					tbody
						tr(ng-repeat="cartItem in cart.cartItems")
							td {{cartItem.name}}
							td {{cartItem.quantity}}
							td {{cartItem.price}}
							td
								div
									span(ng-repeat="link in cartItem.links | filter: {rel: 'add'}")
										a.btn.btn-primary.btn-xs(href="" ng-click="processCart(link.href, link.method)") {{link.label}}
									| 
									span(ng-repeat="link in cartItem.links | filter: {rel: 'remove'}")
										a.btn.btn-info.btn-xs(href="" ng-click="processCart(link.href, link.method)") {{link.label}}
										| 
						tr
							td
							th(align="right") Total Amount Due:
							td {{cart.cartTotal}}
							td
								div
									span(ng-repeat="link in cart.links | filter: {rel: 'emptyCart'}")
										a.btn.btn-danger.btn-xs(href="" ng-click="processCart(link.href, link.method)") {{link.label}}
									| 
									span(ng-repeat="link in cart.links | filter: {rel: 'purchase'}")
										a.btn.btn-success.btn-xs(href="" ng-click="processCart(link.href, link.method)") {{link.label}}
			// /.col
		// /.row
	// /.box-body
// /.box	