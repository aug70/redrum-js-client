// User Account: style can be found in dropdown.less
li.dropdown.user.user-menu
	a.dropdown-toggle(href='#', data-toggle='dropdown')
		i.glyphicon.glyphicon-user
		span
			| Jane Doe
			i.caret
	ul.dropdown-menu
		// User image
		li.user-header.bg-light-blue
			img.img-circle(src='/img/avatar3.png', alt='User Image')
			p
				| Jane Doe 
				small Member since Nov. 2012
		// Menu Body
		li.user-body
			.col-xs-12.text-center
				a(href='/market') Inventory
		// Menu Footer
		li.user-footer
			.pull-left
				a.btn.btn-default.btn-flat(href='/profile') Profile
			.pull-right
				a.btn.btn-default.btn-flat(href='/logout') Sign out
