// Left side column. contains the logo and sidebar
aside.left-side.sidebar-offcanvas
	// sidebar: style can be found in sidebar.less
	section.sidebar
		// Sidebar user panel
		.user-panel
			.pull-left.image
				img.img-circle(ng-src='{{user.avatar}}', alt='{{user.userName}}')
			.pull-left.info
				p Hello, {{user.userName}}
				a(href='/profile')
					i.fa.fa-circle.text-success
					| {{user.status}}
		// sidebar menu: : style can be found in sidebar.less
		ul.sidebar-menu
			li.active
				a(href='/dashboard', target="_top")
					i.fa.fa-dashboard
					span Dashboard
			li
				a(href='/profile', target="_top")
					i.fa.fa-user
					span Profile
			li.treeview
				a(href='#')
					i.fa.fa-shopping-cart
					span Market
					i.fa.fa-angle-left.pull-right
				ul.treeview-menu
					li
						a(href='/market#credit', target="_top")
							i.fa.fa-angle-double-right
							| Buy game credit
					li
						a(href='/market#coupons', target="_top")
							i.fa.fa-angle-double-right
							| Redeem coupons
					li
						a(href='/market#products', target="_top")
							i.fa.fa-angle-double-right
							| Products
					li(data-ng-show="(user.missingProducts | filter:productId).length")
						a(href='/market#recommended', target="_top")
							i.fa.fa-angle-double-right
							| Recommended for you
					li
						a(href='/market#cart', target="_top").text-yellow
							i.fa.fa-angle-double-right
							| Your shopping cart
							small.badge.pull-right.bg-yellow {{user.cartSize}}
					li
						a(href='/market#inventory', target="_top").text-red
							i.fa.fa-angle-double-right
							| Your inventory
							small.badge.pull-right.bg-red {{user.inventorySize}}
					li
						a(href='/market#orders', target="_top").text-light-blue
							i.fa.fa-angle-double-right
							| Your orders
							small.badge.pull-right.bg-light-blue {{user.ordersSize}}
			li
				a(href='/stats', target="_top")
					i.ion.ion-stats-bars
					span Statistics
			li(data-ng-show="user.activeGame.activeGame")
				a(href='/game', target="_top")
					i.ion.ion-game-controller-b
					span Game
					small.badge.pull-right.bg-red Active
			li(data-ng-show="!user.activeGame.activeGame")
				a(href='/game', target="_top")
					i.ion.ion-game-controller-b
					span Game
	// /.sidebar
