extends layout
block content
    // Content Header (Page header)
    section.content-header
      h1
        | Profile
        small Change your user information here
      ol.breadcrumb
        li
          i.fa.fa-dashboard
          a(href='/dashboard', target="_top")
             |  Dashboard
        li.active
          i.fa.fa-user
             |  Profile
    // Main content
    section.content
      include ./includes/alerts
      include ./includes/profile/profile
    // /.content

block javascript
    // jQuery 2.0.2
    script(src='//code.jquery.com/jquery-2.0.2.js', type='text/javascript')
    // Bootstrap
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js', type='text/javascript')
    // AdminLTE App
    script(src='/js/AdminLTE/app.js', type='text/javascript')
