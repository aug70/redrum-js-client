extends layout
block content
	// Content Header (Page header)
	section.content-header
		h1
			| Dashboard
			small Control panel
		ol.breadcrumb
			li.active 
					i.fa.fa-dashboard
					|  Dashboard
	// Main content
	section.content
		// Small boxes (Stat box)
		.row
			.col-lg-3.col-xs-6
				// small box
				.small-box.bg-aqua
					.inner
						h3
							| $143.000
						p
							| Your Budget
					.icon
						i.ion.ion-ios7-cart-outline
					a.small-box-footer(href='/market')
						| More info
						i.fa.fa-arrow-circle-right
			// ./col-lg-3
			.col-lg-3.col-xs-6
				// small box
				.small-box.bg-green
					.inner
						h3
							| 53
							sup(style='font-size: 20px') %
						p
							| Bounce Rate
					.icon
						i.ion.ion-game-controller-b
					a.small-box-footer(href='#')
						| More info
						i.fa.fa-arrow-circle-right
			// ./col
			.col-lg-3.col-xs-6
				// small box
				.small-box.bg-yellow
					.inner
						h3
							| Profile
						p
							| Edit your profile
					.icon
						i.ion.ion-person
					a.small-box-footer(href='/profile')
						| More info
						i.fa.fa-arrow-circle-right
			// ./col
			.col-lg-3.col-xs-6
				// small box
				.small-box.bg-red
					.inner
						h3
							| 56
						p
							| Unique Products
					.icon
						i.ion.ion-ios7-box
					a.small-box-footer(href='#')
						| More info
						i.fa.fa-arrow-circle-right
			// ./col
		// /.row
		// top row
		.row
			.col-lg-3.col-xs-6
				// small box
				.small-box.bg-purple
					.inner
						h3
							| Redeem
						p
							| Use Coupons and add to your credit
					.icon
						i.ion.ion-egg
					a.small-box-footer(href='/market')
						| More info
						i.fa.fa-arrow-circle-right
			// ./col-lg-3
			.col-lg-3.col-xs-6
				// small box
				.small-box.bg-maroon
					.inner
						h3
							| Buy
						p
							| Buy game credit
					.icon
						i.ion.ion-gear-a
					a.small-box-footer(href='#')
						| More info
						i.fa.fa-arrow-circle-right
			// ./col
			.col-lg-3.col-xs-6
				// small box
				.small-box.bg-teal
					.inner
						h3
							| Shop
						p
							| Add more products to your inventory
					.icon
						i.ion.ion-ios7-cart
					a.small-box-footer(href='#')
						| More info
						i.fa.fa-arrow-circle-right
			// ./col
			.col-lg-3.col-xs-6
				// small box
				.small-box.bg-blue
					.inner
						h3
							| Solve
						p
							| Play a game and solve a murder
					.icon
						i.ion.ion-eye
					a.small-box-footer(href='#')
						| More info
						i.fa.fa-arrow-circle-right
